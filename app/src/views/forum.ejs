<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/static/css/forum.css" />
    <title>Simple Forum</title>
  </head>
  <body>
    <%- include('partials/Header', { user: user }) %>
    <h1>Forum</h1>
    <form action="/forum" method="POST">
      <input type="text" name="sujet" placeholder="Subject" required />
      <textarea name="contenu" placeholder="Content" required></textarea>
      <button type="submit">Submit</button>
      <!-- Display error message if any -->
      <% if (error) { %>
      <div class="error"><%= error %></div>
      <% } %>

      <div id="posts-container">
        <!-- Loop through posts and display each one -->
        <% posts.forEach(post => { %>
        <div class="post">
          <h2><%= post.username %></h2>
          <h3><%= post.sujet %></h3>
          <p><%= post.contenu %></p>
          <small
            >Posted on <%= new Date(post.datePublication).toLocaleString()
            %></small
          >
        </div>
        <% }) %>
      </div>
    </form>
    <%- include('partials/Footer')%>
  </body>
</html>
