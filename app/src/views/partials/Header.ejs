<header class="header">
  <link rel="stylesheet" href="../../../static/css/header.css" />
  <img
    src="/static/image/logo-ACD.png"
    alt="ACD Motorsport Logo"
    class="logo"
  />
  <nav class="nav">
    <ul class="nav-list">
      <li>
        <a href="/accueil">Accueil</a>
      </li>
      <li>
        <a href="/forum">Forum</a>
      </li>
    </ul>
  </nav>
  <% if (user) { %>
  <div onclick="showMenu()" id="profile-menu">
    <button class="profile-circle" @click="toggleMenu">
      <%= user.username[0] %>
    </button>
    <div id="dropdown-menu" class="dropdown-menu">
      <a href="/profile">Mon Profil</a>
      <a href="/logout">Se DÃ©connecter</a>
    </div>
  </div>
  <% } else { %>
  <a href="/login" class="connexion">Connexion</a>
  <% } %>
  <script>
    const showMenu = () => {
      const menu = document.getElementById("dropdown-menu");
      menu.style.display = menu.style.display === "none" ? "block" : "none";
    };
  </script>
</header>
